{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Permissions for YNAB4 Client",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        { "path": "$HOME/Dropbox/**" },
        { "path": "$HOME/Documents/**" },
        { "path": "$DOCUMENT/**" }
      ]
    },
    {
      "identifier": "fs:allow-write-file",
      "allow": [
        { "path": "$HOME/Dropbox/**" },
        { "path": "$HOME/Documents/**" },
        { "path": "$DOCUMENT/**" }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        { "path": "$HOME/Dropbox/**" },
        { "path": "$HOME/Documents/**" },
        { "path": "$DOCUMENT/**" }
      ]
    },
    {
      "identifier": "fs:allow-read-dir",
      "allow": [
        { "path": "$HOME/Dropbox/**" },
        { "path": "$HOME/Documents/**" },
        { "path": "$DOCUMENT/**" }
      ]
    },
    {
      "identifier": "fs:allow-create-dir",
      "allow": [
        { "path": "$HOME/Dropbox/**" },
        { "path": "$HOME/Documents/**" },
        { "path": "$DOCUMENT/**" }
      ]
    }
  ]
}
