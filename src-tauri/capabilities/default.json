{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:event:default",
    "core:event:allow-listen",
    "dialog:default",
    "fs:default",
    "fs:allow-exists",
    "shell:default",
    "shell:allow-open",
    "http:default",
    "deep-link:default",
    "opener:default",
    {
      "identifier": "http:allow-fetch",
      "allow": [
        { "url": "https://api.dropboxapi.com/**" },
        { "url": "https://content.dropboxapi.com/**" }
      ]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        { "path": "$HOME/**" }
      ]
    },
    {
      "identifier": "fs:allow-read-dir",
      "allow": [
        { "path": "$HOME/**" }
      ]
    },
    {
      "identifier": "fs:allow-stat",
      "allow": [
        { "path": "$HOME/**" }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        { "path": "$HOME/Dropbox/**" },
        { "path": "$HOME/Documents/**" }
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        { "path": "$HOME/Dropbox/**" },
        { "path": "$HOME/Documents/**" }
      ]
    },
    {
      "identifier": "fs:allow-remove",
      "allow": [
        { "path": "$HOME/Dropbox/**" },
        { "path": "$HOME/Documents/**" }
      ]
    }
  ]
}
